<li class="bb5-list-data-item{% if item.state not in [1, 3] %} disabled{% endif %}" data-uid="{{ item.uid }}">
    <span class="bb5-toolbar-order-col col-bb5-47">{{ item.title }}</span>
    <span class="bb5-toolbar-order-col col-bb5-21">{{ item.created }}</span>
    <span class="bb5-toolbar-order-col col-bb5-21">{{ item.modified }}</span>
    <span class="bb5-toolbar-order-col col-bb5-11">
        {% if item.state in [1, 3] %}
            <button class="btn btn-online btn-xs select-btn">{{ trans('select') }}</button>
        {% else %}
            <button class="btn btn-offline btn-xs disabled">{{ trans('offline') }}</button>
        {% endif %}
    </span>
</li>
